# Use a Python slim image // prueba para el cambio
FROM python:3.11-slim

# Install Oracle Instant Client dependencies
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Download and install Oracle Instant Client
WORKDIR /opt/oracle
RUN wget https://download.oracle.com/otn_software/linux/instantclient/1919000/instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && unzip instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && rm instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && mkdir -p /opt/oracle/instantclient/network/admin

# Set environment variables for the Oracle client
ENV LD_LIBRARY_PATH=/opt/oracle/instantclient_19_19:$LD_LIBRARY_PATH
ENV TNS_ADMIN=/opt/oracle/instantclient/network/admin

# Set the working directory for your application
WORKDIR /app

# Set the PYTHONPATH to include the /app directory
ENV PYTHONPATH=/app

# Copy the requirements file and install dependencies
COPY ./requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy your application code
COPY ./app ./app

# Expose the application port
EXPOSE 8000

# This CMD now correctly points to the 'app' directory
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]