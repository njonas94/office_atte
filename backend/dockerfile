# Use Ubuntu base image for better Oracle Client compatibility
FROM ubuntu:22.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install Python and Oracle Instant Client dependencies
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-dev \
    python3-pip \
    wget \
    unzip \
    gcc \
    libaio1 \
    libaio-dev \
    && rm -rf /var/lib/apt/lists/*

# Create symlink for python
RUN ln -s /usr/bin/python3.11 /usr/bin/python

# Download and install Oracle Instant Client
WORKDIR /opt/oracle
RUN wget --no-verbose https://download.oracle.com/otn_software/linux/instantclient/1919000/instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && unzip instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && rm instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && mkdir -p /opt/oracle/instantclient/network/admin \
    && ln -s /opt/oracle/instantclient_19_19 /opt/oracle/instantclient

# Set environment variables for the Oracle client
ENV LD_LIBRARY_PATH=/opt/oracle/instantclient_19_19:$LD_LIBRARY_PATH
ENV TNS_ADMIN=/opt/oracle/instantclient/network/admin
ENV PATH=/opt/oracle/instantclient_19_19:$PATH

# Set the working directory for your application
WORKDIR /app

# Set the PYTHONPATH to include the /app directory
ENV PYTHONPATH=/app

# Copy the requirements file and install dependencies
COPY ./requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Verify that schedule module is installed
RUN python3 -c "import schedule; print('Schedule module installed successfully')"

# Copy your application code
COPY ./app ./app

# Expose the application port
EXPOSE 8000

# This CMD now correctly points to the 'app' directory
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]