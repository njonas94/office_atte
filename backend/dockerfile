FROM container-registry.oracle.com/os/oraclelinux:7-slim

# Instala herramientas necesarias
RUN yum -y install oracle-release-el7 && \
    yum -y install python3 python3-pip python3-devel gcc wget unzip libaio && \
    yum clean all

# Descarga e instala Oracle Instant Client
WORKDIR /opt/oracle
RUN wget https://download.oracle.com/otn_software/linux/instantclient/1919000/instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && unzip instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && rm instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && mkdir -p /opt/oracle/instantclient/network/admin

# Variables de entorno
ENV LD_LIBRARY_PATH=/opt/oracle/instantclient_19_19:$LD_LIBRARY_PATH
ENV TNS_ADMIN=/opt/oracle/instantclient/network/admin
ENV PYTHONPATH="/app"

# Directorio de trabajo
WORKDIR /app

COPY requirements.txt .
RUN python3 -m pip install --upgrade pip
RUN pip3 install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

# Copy application code
COPY . .

# Expose port
EXPOSE 8000

# Command to run the application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

# Install Oracle Instant Client dependencies
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    libaio-dev \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Download and install Oracle Instant Client
WORKDIR /opt/oracle
RUN wget https://download.oracle.com/otn_software/linux/instantclient/1919000/instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && unzip instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && rm instantclient-basic-linux.x64-19.19.0.0.0dbru.zip \
    && mkdir -p /opt/oracle/instantclient/network/admin

# Show libaio.so.1 location for debugging
RUN find / -name libaio.so.1 || true

# Create symlink using the most probable path
RUN ln -sf /usr/lib/x86_64-linux-gnu/libaio.so.1 /opt/oracle/instantclient_19_19/libaio.so.1 || true

# Create symlink for libaio.so.1 after Oracle Instant Client is installed
RUN ln -s /lib/x86_64-linux-gnu/libaio.so.1 /opt/oracle/instantclient_19_19/libaio.so.1 2>/dev/null || \
    ln -s /usr/lib/x86_64-linux-gnu/libaio.so.1 /opt/oracle/instantclient_19_19/libaio.so.1 2>/dev/null || \
    ln -s /usr/lib/libaio.so.1 /opt/oracle/instantclient_19_19/libaio.so.1 2>/dev/null || \
    ln -s /lib/libaio.so.1 /opt/oracle/instantclient_19_19/libaio.so.1 2>/dev/null || true

# Set environment variables
ENV LD_LIBRARY_PATH=/opt/oracle/instantclient_19_19:$LD_LIBRARY_PATH
ENV TNS_ADMIN=/opt/oracle/instantclient/network/admin
ENV PYTHONPATH="/app"

# Set working directory
WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose port
EXPOSE 8000

# Command to run the application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]